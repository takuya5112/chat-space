.Main
  .Main__header
    .Main__header__title
      %h2= @group.name
      .Main__header__title__member
        %p Member:
        -@group.users.each do |user|
          %p= user.name
    .Main__header__edit
      = link_to edit_group_path(@group), class: "Main__header__edit__btn" do
        Edit

  .Main__chats
    = render @messages

      
  .Form
    = form_with model: [@group, @message], html: {class: "Form1"}, local: true do |f|
      .Form__message
        = f.text_field :text, class: 'Form__message__box',placeholder: "type a message"
        = f.label :image, class: "Form__message__icon" do
          =icon("far","image")
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: "Form__btn__item" 
        