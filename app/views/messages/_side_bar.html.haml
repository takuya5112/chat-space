.Side
  .Side__header
    .Side__userName
      = current_user.name
      .Side__btn
        = link_to new_group_path, class: "Side__btn__list" do
          = icon('far', 'edit')
          %span<>
        = link_to edit_user_path(current_user), class: "Side__btn__list" do
          = icon('fas','cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group      
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message
    